class Habitacion:
    # dunder init method -> instance method
    def __init__(self, name, house):    # inicializacion de objetos en Python
        
        self._name = name
        self._house = house # se valida que la casa sea una de las existentes con el Setter
    
    # dunder str method    
    def __str__(self):  # se ejecuta cuando se trata de convertir al objeto en string
        return f"{self.name} from {self.house}"
    
    # Getter name
    @property
    def name(self):
        return self._name
    
    # Setter name
    @name.setter
    def name(self, name):
        if not name:
            raise ValueError("Missing name")
        self._name = name
    
    # Getter house
    @property
    def house(self):
        return self._house
    
    # Setter house
    @house.setter
    def house(self, house):
        if house not in ["Gryffindor", "Hufflepuff", "Ravenclaw", "Slytherin"]:
            raise ValueError("Invalid House")
        self._house = house
    